<Window x:Class="FaceRecognitionWPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceRecognitionWPF.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label>Models directory</Label>
        <TextBox Text="{Binding ModelsDirectory}"></TextBox>
        <Label>Train path</Label>
        <TextBox Text="{Binding TrainPath}"></TextBox>
        <Label>Search path</Label>
        <TextBox Text="{Binding SearchPath}"></TextBox>
        <Label>Search path</Label>
        <Label>Distance threshold</Label>
        <TextBox Text="{Binding DistanceThreshold}"></TextBox>
        <Button Command="{Binding RunCommand}">Run</Button>
    </StackPanel>
</Window>
